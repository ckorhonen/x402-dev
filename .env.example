# x402.dev Payment Rails SDK - Environment Variables

# Required: Your x402.dev API Key
X402_API_KEY=your_api_key_here

# Optional: API Base URL (defaults to https://api.x402.dev)
X402_BASE_URL=http://localhost:8787

# Optional: Webhook Secret for signature verification
X402_WEBHOOK_SECRET=your_webhook_secret_here

# Optional: Environment (development | production)
X402_ENVIRONMENT=development

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token

# For React components (prefix with REACT_APP_ or NEXT_PUBLIC_)
REACT_APP_X402_API_KEY=your_public_api_key_here
REACT_APP_X402_BASE_URL=http://localhost:8787

# Next.js
NEXT_PUBLIC_X402_API_KEY=your_public_api_key_here
NEXT_PUBLIC_X402_BASE_URL=http://localhost:8787
